<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:paddingTop="12dp"
        android:paddingStart="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/corner_card_8dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical"
            android:background="@drawable/corner_card_8dp"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/julian_wan"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:fontFamily="@font/dmsans_bold"
                android:text="@string/Name"
                android:textColor="#000000"
                android:layout_marginBottom="@dimen/between_texts"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dmsans_medium"
                android:textSize="12dp"
                android:text="@string/Job_Title"
                android:textColor="#DE122940"
                android:layout_marginBottom="@dimen/between_texts"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/between_texts"

                >
                <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location_icon"
                    android:layout_marginEnd="4dp"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_regular"
                    android:text="@string/Location"
                    android:textSize="13dp"
                    android:textColor="#99263238"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_regular"
                    android:text="@string/reviews_num"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp"
                    android:textSize="12dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsans_medium"
                        android:text="@string/rating_num"
                        android:textColor="#000000"
                        android:layout_marginEnd="4dp"
                        android:textSize="12dp"
                        />
                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star_icon"
                        />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="38dp"
                android:layout_height="20dp"
                android:background="@drawable/hours_shape"
                android:layout_marginBottom="@dimen/between_texts"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12dp"
                    android:fontFamily="@font/dmsans_regular"

                    android:gravity="center_vertical"
                    android:text="3 hr"
                    android:textColor="#FFFFFF"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="@string/Country"
                android:fontFamily="@font/dmsans_medium"
                android:textColor="#DE122940"
                android:layout_marginBottom="@dimen/between_texts"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Time"
                android:fontFamily="@font/dmsans_regular"
                android:textSize="13dp"
                android:textColor="#99263238"
                />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
